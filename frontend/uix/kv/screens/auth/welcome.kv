<WelcomeScreen>
    md_bg_color: root.theme_cls.backgroundColor
    padding: 20
    MDLabel:
        adaptive_size: True
        markup: True
        halign: 'center'
        text: "[size=20sp][b][color=#008080]Welcome to[/color][/b][/size]"
        pos_hint: {'center_x': 0.5, "center_y": .8}

    Image:
        adaptive_size: True
        size_hint: .8, .38
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        source: "data/images/logo.png"

    MDLabel:
        adaptive_size: True
        markup: True
        # halign: 'center'
        text: f"[color=#008080]Online[/color]" if root.status == "online" else f"[color=#808080]Offline[/color]"
        pos_hint: {'right': 1, "bottom": 1}
                

    MDBoxLayout:
        orientation: 'horizontal'
        spacing: 40
        padding: [dp(80), 0, 0, 0]

        MDButton:
            on_release: root.manager.push("login")
            pos_hint: {'center_x': 0.5, "center_y": .2}
            radius: dp(2)
            style: "filled"
            MDButtonText:
                text: "Sign In"

        MDButton:
            on_release: root.manager.push("register")
            pos_hint: {'center_x': 0.8, "center_y": .2}
            radius: dp(2)
            style: "filled"
            MDButtonText:
                text: "Register"