<WelcomeScreen>
    md_bg_color: root.theme_cls.backgroundColor
    MDLabel:
        adaptive_size: True
        markup: True
        halign: 'center'
        text: "[b][color=#008080]Welcome to\n[size=36sp]eNtweni Booking[/size][/color][/b]"
        pos_hint: {'center_x': 0.5, "center_y": .8}


    MDCard:
        elevation: 2
        size_hint: .8, .4
        pos_hint: {'center_x': 0.5, "center_y": .5}

        Image:
            source: "data/images/logo.jpg"

    MDBoxLayout:
        orientation: 'horizontal'
        spacing: 40
        padding: [dp(80), 0, 0, 0]

        MDButton:
            on_release: root.manager.push("login")
            pos_hint: {'center_x': 0.5, "center_y": .2}
            radius: dp(2)
            MDButtonText:
                text: "Sign In"

        MDButton:
            on_release: root.manager.push("register")
            pos_hint: {'center_x': 0.8, "center_y": .2}
            radius: dp(2)
            MDButtonText:
                text: "Register"