    MDBoxLayout:
        orientation: 'horizontal'
        spacing: 40
        padding: [dp(80), 0, 0, 0]

        MDButton:
            on_release: root.manager.push("login")
            pos_hint: {'center_x': 0.5, "center_y": .2}
            radius: dp(2)
            MDButtonText:
                text: "Sign In"

        MDButton:
            on_release: root.manager.push("register")
            pos_hint: {'center_x': 0.8, "center_y": .2}
            radius: dp(2)
            MDButtonText:
                text: "Register"