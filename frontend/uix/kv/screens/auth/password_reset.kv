<PasswordResetScreen>
    md_bg_color: root.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_height: True
        size_hint_x: .9
        pos_hint: {'center_x': 0.5, "top": 1}

    MDButton:
        id: login
        on_release: root.reset_password(root.do_remember_me, username.text, password.text)
        pos_hint: {'center_x': 0.5, "center_y": .5}
        radius: dp(2)
        style: "filled"
        md_bg_color: "#008080"
        MDButtonText:
            text: "RESET"
        MDButtonIcon:
            icon: 'login'

