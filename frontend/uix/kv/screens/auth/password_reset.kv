<PasswordResetScreen>
    md_bg_color: root.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: 'horizontal'
        adaptive_height: True
        size_hint_x: .9
        pos_hint: {'center_x': 0.5, "top": 1}
        
        MDCheckbox:
            on_state: root.remember_me(self.state)

        MDLabel:
            text: "Remember me"

        MDLabel:
            markup: True
            text: "[b][color=#008080]Forgot password?[/color][/b]"

    MDButton:
        id: login
        on_release: root.reset_password(root.do_remember_me, username.text, password.text)
        pos_hint: {'center_x': 0.5}
        radius: dp(2)
        style: "filled"
        md_bg_color: "#008080"
        MDButtonText:
            text: "RESET"
        MDButtonIcon:
            icon: 'login'

    MDLabel:
        markup: True
        pos_hint: {'center_x': 0.5}
        halign: 'center'
        adaptive_height: True
        text: "Do not have an account? [b][color=#008080]Sign up[/color][/b]"
