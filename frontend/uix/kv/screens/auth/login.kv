<LoginScreen>
    md_bg_color: root.theme_cls.backgroundColor

    MDCard:
        orientation: 'vertical'
        style: "elevated"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .8, .7
        # Sets custom properties.
        theme_shadow_color: "Custom"
        shadow_color: "green"
        theme_bg_color: "Custom"
        md_bg_color: "white"
        md_bg_color_disabled: "grey"
        theme_shadow_offset: "Custom"
        shadow_offset: (1, -2)
        theme_shadow_softness: "Custom"
        shadow_softness: 1
        theme_elevation_level: "Custom"
        elevation_level: 2
        spacing: 20
        padding: 0,0,0,dp(60)

        MDBoxLayout:
            orientation: 'vertical'
            # pos_hint: {'center_x': .5, "center_y": .5}

            FitImage:
                source: "data/images/logo2.png"
                pos_hint: {"top": 1}

            MDBoxLayout:
                orientation: 'vertical'
                spacing: 20
                size_hint_x: .9
                pos_hint: {'center_x': 0.5, "center_y": 0.9}
                padding: 0,0,0,dp(60)

                MDTextField:
                    id: username
                    pos_hint: {'center_x': 0.5, "top": 1}
                    allow_copy: True
                    focus: True
                    validator: 'email'
                    on_text_validate: password.focus = True

                    MDTextFieldLeadingIcon:
                        icon: "account"

                    MDTextFieldHintText:
                        text: "Username"
            
                MDTextField:
                    id: password
                    pos_hint: {'center_x': 0.5}
                    allow_copy: False
                    password: True
                    # on_text_validate: login.on_release

                    MDTextFieldLeadingIcon:
                        icon: "account"
                        
                    MDTextFieldHintText:
                        text: "Password"

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            size_hint_x: .9
            pos_hint: {'center_x': 0.5, "top": 1}
            
            MDCheckbox:
                on_state: root.remember_me(self.state)

            MDLabel:
                text: "Remember me"

            MDLabel:
                markup: True
                text: "[b][color=#008080]Forgot password?[/color][/b]"

        MDButton:
            id: login
            on_release: root.login(root.do_remember_me, username.text, password.text)
            pos_hint: {'center_x': 0.5}
            radius: dp(2)
            style: "filled"
            md_bg_color: "#008080"
            MDButtonText:
                text: "LOGIN"
            MDButtonIcon:
                icon: 'login'
