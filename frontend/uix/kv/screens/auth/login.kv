<LoginScreen>
    md_bg_color: root.theme_cls.backgroundColor

    MDCard:
        orientation: 'vertical'
        md_bg_color: root.theme_cls.backgroundColor
        style: "outlined"
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint: .8, .7
        spacing: 20
        padding: 0,0,0,dp(60)

        MDBoxLayout:
            orientation: 'vertical'
            # pos_hint: {'center_x': .5, "center_y": .5}
            FitImage:
                source: "data/images/logo.png"
                pos_hint: {"top": 1}

            MDBoxLayout:
                orientation: 'vertical'
                spacing: 20
                size_hint_x: .9
                pos_hint: {'center_x': 0.5, "center_y": 0.9}
                padding: 0,0,0,dp(60)

                MDTextField:
                    id: login_identifier
                    pos_hint: {'center_x': 0.5, "top": 1}
                    allow_copy: True
                    on_text_validate: password.focus = True

                    MDTextFieldLeadingIcon:
                        icon: "account"

                    MDTextFieldHintText:
                        text: "Email / Username"

                MDTextField:
                    id: password
                    pos_hint: {'center_x': 0.5}
                    allow_copy: False
                    password: True
                    on_text_validate: login.focus = True

                    MDTextFieldLeadingIcon:
                        icon: "account"

                    MDTextFieldHintText:
                        text: "Password"

        MDBoxLayout:
            orientation: 'horizontal'
            adaptive_height: True
            size_hint_x: .9
            pos_hint: {'center_x': 0.5, "top": 1}

            MDCheckbox:
                id: remember_me
                on_state: root.remember_me(self.state)

            MDLabel:
                text: "Remember me"

            MDLabel:
                markup: True
                text: "[b][color=#008080][ref=]Forgot password?[/ref][/color][/b]"
                on_ref_press: root.manager.push("password_reset")

        MDButton:
            id: login
            on_release: root.login(root.do_remember_me, login_identifier.text, password.text)
            pos_hint: {'center_x': 0.5}
            radius: dp(2)
            style: "filled"
            # md_bg_color: "#008080"
            focus: False
            MDButtonText:
                text: "LOGIN"
            MDButtonIcon:
                icon: 'login'

        MDLabel:
            markup: True
            pos_hint: {'center_x': 0.5}
            halign: 'center'
            adaptive_height: True
            text: "Do not have an account? [b][color=#008080][ref=]Sign up[/ref][/color][/b]"
            on_ref_press: root.manager.push("register")
