<HomeScreen>
    name: "home"
    md_bg_color: app.theme_cls.backgroundColor

    MDTopAppBar:
        id: topbar
        md_bg_color: app.theme_cls.backgroundColor
        type: "small"
        pos_hint: {'top': 1}

        # MDTopAppBarLeadingButtonContainer:

        #     MDActionTopAppBarButton:
        #         icon: "menu"
                # theme_icon_color: "Custom"
                # icon_color: 0, 1, 0, 1
                # on_release:
                #     root.manager.back()

        MDTopAppBarTitle:
            text: "eNtweniBooking"

        MDTopAppBarTrailingButtonContainer:
            MDActionTopAppBarButton:
                icon: "menu"
                # theme_icon_color: "Custom"
                # icon_color: 0, 1, 0, 1
                on_release: root.manager.push("settings")

    MDScreenManager:
        id: home_screen_manager
        y: root.height - self.height - topbar.height

        MDScreen:
            name: "Home"
            pos_hint: {'center_x': 0.5,'top': 1.0}

            MDBoxLayout:
                orientation: 'vertical'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: root.height /2

                    MDLabel:
                        id: top_label
                        pos_hint: {'center_x': 0.5,'top':1}
                        text: 'HOTELS'
                        adaptive_height: True

                    MDSwiper:
                        id: hotels
                        # size_hint_y: None
                        # height: root.height /2 - dp(40)
                        # y: root.height - top_label.height

        MDScreen:
            name: "Booking"

            MDLabel:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                text: 'Booking Screen'

        MDScreen:
            name: "Ride"

            MDLabel:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                text: 'Ride Hailing Screen'

    MDNavigationBar:
        id: home_nav_bar
        type: 'small'
        on_switch_tabs: root.on_switch_tabs(*args)

        MDNavigationItem:
            MDNavigationItemIcon:
                icon: 'home'
            MDNavigationItemLabel:
                text: 'Home'

        MDNavigationItem:
            MDNavigationItemIcon:
                icon: 'hospital-building'
            MDNavigationItemLabel:
                text: 'Booking'

        MDNavigationItem:
            MDNavigationItemIcon:
                icon: 'car-connected'
            MDNavigationItemLabel:
                text: 'Ride'

<MySwiper@MDSwiperItem>

    MDSmartTile:
        size_hint_y: None
        height: dp(320)
        overlap: False

        MDSmartTileImage:
            id: image
            source: "data/images/hotel/hotel.png"
            radius: [dp(16), dp(16), 0, 0]

        MDSmartTileOverlayContainer:
            md_bg_color: 0, 0, 0, .5
            adaptive_height: True
            padding: "8dp"
            spacing: "8dp"
            radius: [0, 0, dp(16), dp(16)]

            MDIconButton:
                icon: "heart-outline"
                theme_icon_color: "Custom"
                icon_color: 1, 0, 0, 1
                pos_hint: {"center_y": .5}
                on_release:
                    self.icon = "heart" \
                    if self.icon == "heart-outline" else \
                    "heart-outline"

            MDLabel:
                markup: True
                text: "[size=18sp][b]Holiday Inn [color=#ffff00]$300[/color][/b][/size]"
                theme_text_color: "Custom"
                text_color: "white"
