<OrganisationTile>:
    MDSmartTile:
        size_hint_y: None
        height: dp(320)
        overlap: False

        MDSmartTileImage:
            id: image
            source: "data/images/hotel/hotel.png"
            radius: [dp(16), dp(16), 0, 0]

        MDSmartTileOverlayContainer:
            md_bg_color: 0, 0, 0, .5
            adaptive_height: True
            padding: "8dp"
            spacing: "8dp"
            radius: [0, 0, dp(16), dp(16)]

            MDIconButton:
                icon: "heart-outline"
                theme_icon_color: "Custom"
                icon_color: 1, 0, 0, 1
                pos_hint: {"center_y": .5}
                on_release:
                    self.icon = "heart" \
                    if self.icon == "heart-outline" else \
                    "heart-outline"

            MDLabel:
                markup: True
                text: "[size=18sp][b]Holiday Inn [color=#ffff00]$300[/color][/b][/size]"
                theme_text_color: "Custom"
                text_color: "white"
