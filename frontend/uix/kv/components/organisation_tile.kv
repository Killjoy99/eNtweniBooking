<OrganisationTile>:
    pos_hint: {'center_x': 0.5,'center_y': 0.5}
    size_hint: (None, None)
    size: (dp(320), dp(320))
    overlap: False

    MDSmartTileImage:
        source: root.image_url
        radius: [dp(24), dp(24), dp(0), dp(0)]

    MDSmartTileOverlayContainer:
        md_bg_color: 0,0,0, .5
        adaptive_height: True
        padding: dp(8)
        spacing: dp(8)
        radius: [dp(0), dp(0), dp(24), dp(24)]

        MDIconButton:
            icon: "heart-outline"
            theme_icon_color: "Custom"
            icon_color: 1, 0, 0, 1
            pos_hint: {"center_y": .5}
            on_release:
                self.icon = "heart" \
                if self.icon == "heart-outline" else \
                "heart-outline"

        MDLabel:
            text: root.name
            theme_text_color: "Custom"
            text_color: "white"
